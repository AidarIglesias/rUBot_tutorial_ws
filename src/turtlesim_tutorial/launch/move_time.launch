<?xml version="1.0" encoding="UTF-8"?>

<launch>
        <arg name="v" default="0.3"/>
        <arg name="w" default="0"/>
        <arg name="t" default="5"/>     <!-- New parameter for time (movement duration) -->
    <node pkg="turtlesim" type="turtlesim_node" name="turtlesim_node"/>
    <node pkg="turtlesim_tutorial" type="move_time.py" name="move_turtle" output="screen" >
        <param name="v" value="$(arg v)"/>
        <param name="w" value="$(arg w)"/>
        <param name="t" value="$(arg t)"/>
    </node>
</launch>